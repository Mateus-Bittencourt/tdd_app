<h1>Novo Cliente</h1>

<%= form_for @customer do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :smoker %><br />
    <% { 'S': 'Sim', 'N': 'NÃ£o' }.each do |key, value| %>
      <%= f.radio_button :smoker, key %> <%= value %> <br>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit 'Criar Cliente' %>
  </div>
<% end %>
